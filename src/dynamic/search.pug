.jumbotron.jumbotron-fluid.maintron.maintron-plus
  .container.mb-2
    h1.display-5.mb-0.mt-2.text-boldest Search Bots
    p.lead.ml-1.text-damp.text-bold.mb-0 Find what you are looking for!
    hr.bg-dark.ml-0.mb-4(style='max-width:400px;')
    .row
      .col-md-7
        .row.thesearch
          .col-md-12
            .form-group
              .input-group
                input#searchbar.form-control.form-control-lg.dark_cancel(style='background:#262626;color:#ffffff;', type='search', autocomplete='off', value='', placeholder='Search for specific bots... [Press Enter]')

#cards
  if (cards.length == 0)
    .row.mb-4
      .col-12.pb-5.pt-4.mt-5.mb-5.text-center
        h1
          i.far.fa-frown-open
        h2.mb-1 No Results
        p.text-damp Try searching for something else!

  else
    each card in cards
      .card.botcard(style='transform: translate(0px, 0px); opacity: 1;')
        .card-body.p-3.pb-2.botcard-hassplash(style='border-radius: 4px 4px 0px 0px; background: linear-gradient(rgba(48, 48, 48, 0.3) 50%, rgb(48, 48, 48) 98%), url("https://images-ext-1.discordapp.net/external/ZZNXF44V2pbaXGs1wMgiebscvrzkAsGg7vhlxpMnnVQ/https/cdn.wallpapersafari.com/37/44/ZxvYAN.jpg");')
          img.cardimg(style='width:150px;height:150px;', alt='Bot Avatar', src=card.logo, loading='lazy', draggable='false')
        .card-body.pt-0.pb-0
          .w-100
            .botcount.mb-2.text-damp.text-bold(data-toggle='tooltip', data-placement='left', title='', data-original-title='Votes This Month')
              span.float-left.text-white.h-100
                i.fas.fa-star.pt-1.pb-1
              | #{card.likes || 0}
            .w-100
          .card-body.pt-0.pb-0
            h4.mb-0.text-center.pt-1
              | #{card.username}  
              span.certifiedbadge(data-toggle='tooltip', title='', data-original-title='Certified Bot')
                i.fas.fa-check-circle
            p.mb-2.text-center.text-muted.botdesc #{card.description}
            hr.mt-1.mb-3.bg-secondary
        .card-body.pt-0.botcard-btnholder
          .btn-group.btn-block
            a.btn.btn-sm.btn-secondary(style='width:50%;', href=`/bots/like/${card.botid}`) Vote
          .btn-group.btn-block
            a.btn.btn-sm.btn-secondary(style='width:50%;', href=`https://discord.com/oauth2/authorize?client_id=${card.botid}&scope=bot&permissions=0`) Invite
          a.btn.btn-sm.btn-blue.btn-block(href=`/bots/${card.botid}/`) View Bot




