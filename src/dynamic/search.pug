center
 .jumbotron.jumbotron-fluid.maintron.maintron-plus.mb-0
  .container.mb-2
    h1.display-5.mb-0.mt-2.text-boldest Lucky Bots
    .mb-2(style='min-height:28px;')
      p.lead.ml-1.text-damp.text-bold.mb-0
      h5.text-damp Search for your favourite bots!
<br />

center
 .col-md-7
  .row.thesearch
    .col-md-12
      .form-group
        .input-group
          center
          input#searchbar.form-control.form-control-lg.dark_cancel(style='background:#262626;color:#ffffff;', type='search', autocomplete='off', value='', placeholder='Search Bot...')
          .input-group-append
            a.btn.btn-blue.searchsubmitbtn(style='padding:0 20px;padding-top:15px;')
              i.fas.fa-search


#cards
  if (cards.length == 0)
    h5.text-danger
      b  No bots found 
      br
      | Try searching for something else.
  else
    each card in cards
      .card.botcard(style='transform: translate(0px, 0px); opacity: 1;')
        .card-body.p-3.pb-2.botcard-hassplash(style='border-radius: 4px 4px 0px 0px; background: linear-gradient(rgba(48, 48, 48, 0.3) 50%, rgb(48, 48, 48) 98%), url("https://images-ext-1.discordapp.net/external/ZZNXF44V2pbaXGs1wMgiebscvrzkAsGg7vhlxpMnnVQ/https/cdn.wallpapersafari.com/37/44/ZxvYAN.jpg");')
            .row
              .col.pr-0.imgcol
                .w-100.text-center
                  img.cardimg(draggable='false', loading='lazy', src=card.logo, alt='Bot Avatar')
              .col.flexcen
                 .w-100
                    .botcount.mb-2.text-damp.text-bold(data-toggle='tooltip', data-placement='left', title='', data-original-title='Votes This Month')
                      span.float-left.text-white.h-100
                        i.fas.fa-chevron-up.pt-1.pb-1
                      | #{card.likes || 0}

        .card-body.pt-0.pb-0
          h4.mb-0.text-center.pt-1
            | #{card.username}
            span.certifiedbadge(data-toggle='tooltip', title='', data-original-title='Certified Bot')
              i.fas.fa-badge-check
          p.mb-2.text-center.text-muted.botdesc #{card.description}
        hr.mt-1.mb-3.bg-secondary
        .card-body.pt-0.botcard-btnholder
          a.btn.btn-sm.btn-blue.btn-block(href=`/bots/${card.botid}`) View Bot
          .btn-group.btn-block
            a.btn.btn-sm.btn-secondary(style='width:50%;', href=`/bots/like/${card.botid}`) Vote

